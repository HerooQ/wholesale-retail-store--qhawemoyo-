@model IEnumerable<WholesaleRetailStore.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Order</a>
</p>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer</th>
                    <th>Type</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Total Amount</th>
                    <th>Items</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>#@order.Id</td>
                        <td>@order.Customer?.Name</td>
                        <td>
                            <span class="badge @(order.Customer?.CustomerType == WholesaleRetailStore.Models.CustomerType.Retail ? "bg-primary" : "bg-success")">
                                @order.Customer?.CustomerType
                            </span>
                        </td>
                        <td>@order.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                        <td>
                            <span class="badge @(GetStatusBadgeClass(order.Status))">
                                @order.Status
                            </span>
                        </td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td>@order.OrderItems.Count item(s)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-info">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <strong>No Orders:</strong> No orders have been placed yet.
        <a asp-controller="Pricing" asp-action="Quote" class="alert-link">Create your first order by generating a quote</a>.
    </div>
}

@functions {
    private string GetStatusBadgeClass(WholesaleRetailStore.Models.OrderStatus status)
    {
        return status switch
        {
            WholesaleRetailStore.Models.OrderStatus.Pending => "bg-warning text-dark",
            WholesaleRetailStore.Models.OrderStatus.Confirmed => "bg-info",
            WholesaleRetailStore.Models.OrderStatus.Shipped => "bg-success",
            WholesaleRetailStore.Models.OrderStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
