@model WholesaleRetailStore.Models.DTOs.CreateCustomerDto

@{
    ViewData["Title"] = "Create Customer";
}

<h1>Create New Customer</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CustomerType" class="form-label"></label>
                <select asp-for="CustomerType" class="form-select">
                    <option value="">Select Customer Type</option>
                    <option value="Retail">Retail</option>
                    <option value="Wholesale">Wholesale</option>
                </select>
                <span asp-validation-for="CustomerType" class="text-danger"></span>
                <div class="form-text">
                    <strong>Note:</strong> Retail customers pay base price. Wholesale customers receive discounts.
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Create Customer</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Add any client-side validation or enhancements here
        document.addEventListener('DOMContentLoaded', function() {
            const customerTypeSelect = document.querySelector('[name="CustomerType"]');
            const noteDiv = document.querySelector('.form-text');

            customerTypeSelect.addEventListener('change', function() {
                if (this.value === 'Retail') {
                    noteDiv.innerHTML = '<strong>Note:</strong> Retail customers pay full base price with no discounts.';
                } else if (this.value === 'Wholesale') {
                    noteDiv.innerHTML = '<strong>Note:</strong> Wholesale customers receive automatic discounts based on pricing rules.';
                } else {
                    noteDiv.innerHTML = '<strong>Note:</strong> Retail customers pay base price. Wholesale customers receive discounts.';
                }
            });
        });
    </script>
}
