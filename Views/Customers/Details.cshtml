@model WholesaleRetailStore.Models.Customer

@{
    ViewData["Title"] = $"Customer Details - {Model.Name}";
}

<h1>Customer Details</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Customer Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Customer Type:</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.CustomerType == WholesaleRetailStore.Models.CustomerType.Retail ? "bg-primary" : "bg-success")">
                            @Model.CustomerType
                        </span>
                    </dd>
                </dl>

                <div class="mt-3">
                    <p class="text-muted">
                        @if (Model.CustomerType == WholesaleRetailStore.Models.CustomerType.Retail)
                        {
                            <text><strong>Pricing:</strong> Pays full base price for all products.</text>
                        }
                        else
                        {
                            <text><strong>Pricing:</strong> Eligible for wholesale discounts based on pricing rules.</text>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.Orders.Any())
{
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Order History</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Total Amount</th>
                                    <th>Items</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.Orders.OrderByDescending(o => o.CreatedAt))
                                {
                                    <tr>
                                        <td>@order.Id</td>
                                        <td>@order.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                        <td>
                                            <span class="badge @(GetStatusBadgeClass(order.Status))">
                                                @order.Status
                                            </span>
                                        </td>
                                        <td>@order.TotalAmount.ToString("C")</td>
                                        <td>@order.OrderItems.Count item(s)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row mt-4">
        <div class="col-12">
            <div class="alert alert-info">
                <strong>No Orders:</strong> This customer hasn't placed any orders yet.
            </div>
        </div>
    </div>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-controller="Pricing" asp-action="Quote" asp-route-customerId="@Model.Id" class="btn btn-primary">Generate Quote</a>
</div>

@functions {
    private string GetStatusBadgeClass(WholesaleRetailStore.Models.OrderStatus status)
    {
        return status switch
        {
            WholesaleRetailStore.Models.OrderStatus.Pending => "bg-warning text-dark",
            WholesaleRetailStore.Models.OrderStatus.Confirmed => "bg-info",
            WholesaleRetailStore.Models.OrderStatus.Shipped => "bg-success",
            WholesaleRetailStore.Models.OrderStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
