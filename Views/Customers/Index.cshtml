@model IEnumerable<WholesaleRetailStore.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<h1>Customers</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Customer</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Customer Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>
                    <span class="badge @(customer.CustomerType == WholesaleRetailStore.Models.CustomerType.Retail ? "bg-primary" : "bg-success")">
                        @customer.CustomerType
                    </span>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-sm btn-outline-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
