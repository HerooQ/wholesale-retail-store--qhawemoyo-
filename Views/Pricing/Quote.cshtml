@{
    ViewData["Title"] = "Generate Quote";
}

<h1>Generate Quote</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Select Customer and Products</h5>
            </div>
            <div class="card-body">
                <form asp-action="GenerateQuote" method="post">
                    <div class="mb-4">
                        <label for="customerSelect" class="form-label">Select Customer</label>
                        <select id="customerSelect" name="customerId" class="form-select" required>
                            <option value="">Choose a customer...</option>
                            @foreach (var customer in ViewBag.Customers as IEnumerable<WholesaleRetailStore.Models.Customer>)
                            {
                                <option value="@customer.Id" selected="@(ViewBag.SelectedCustomerId != null && ViewBag.SelectedCustomerId == customer.Id)">
                                    @customer.Name (@customer.Email) - @customer.CustomerType
                                </option>
                            }
                        </select>
                        <div class="form-text">
                            <strong>Note:</strong> Customer type determines pricing rules. Wholesale customers receive discounts.
                        </div>
                    </div>

                    <div class="mb-4">
                        <h6>Available Products</h6>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Description</th>
                                        <th>Stock</th>
                                        <th>Base Price</th>
                                        <th>Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in ViewBag.Products as IEnumerable<WholesaleRetailStore.Models.Product>)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@product.Name</strong>
                                            </td>
                                            <td>@product.Description</td>
                                            <td>
                                                @if (product.Stock > 10)
                                                {
                                                    <span class="badge bg-success">@product.Stock</span>
                                                }
                                                else if (product.Stock > 0)
                                                {
                                                    <span class="badge bg-warning">@product.Stock</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Out of Stock</span>
                                                }
                                            </td>
                                            <td>@product.BasePrice.ToString("C")</td>
                                            <td>
                                                @if (product.Stock > 0)
                                                {
                                                    <input type="number" name="quantities[@product.Id]" class="form-control"
                                                           min="0" max="@product.Stock" value="0" style="width: 80px;">
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Generate Quote</button>
                        <a asp-action="Quote" class="btn btn-secondary">Reset</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">How Pricing Works</h6>
            </div>
            <div class="card-body">
                <h6>Retail Customers:</h6>
                <p class="text-muted small">Pay the full base price for all products. No discounts apply.</p>

                <h6>Wholesale Customers:</h6>
                <p class="text-muted small">Receive automatic discounts based on pricing rules configured in the system.</p>

                <hr>

                <p class="text-muted small">
                    <strong>Quote Generation:</strong><br>
                    1. Select a customer<br>
                    2. Choose products and quantities<br>
                    3. System calculates prices based on customer type<br>
                    4. Review the detailed quote with discounts
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const customerSelect = document.getElementById('customerSelect');

            customerSelect.addEventListener('change', function() {
                const selectedOption = this.options[this.selectedIndex];
                const customerType = selectedOption.text.includes('Wholesale') ? 'Wholesale' : 'Retail';

                // You could add dynamic pricing preview here if desired
                console.log('Selected customer type:', customerType);
            });
        });
    </script>
}
